@{
    ViewData["Title"] = "Categories";
}

@model Category

<div class="container mt-5">
    <div class="d-flex justify-content-center mb-2">
        <h3><a href="/products">Products</a> | Categories</h3>
    </div>
    <div class="d-flex justify-content-between mb-3">
        <div>
            <h4>New Category</h4>
            <form action="/category/add" method="post">
                <div class="form-group">
                    <label for="CategoryName">Name:</label>
                    <input asp-for="CategoryName" class="form-control">
                </div>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
                <input type="submit" value="Create" class="btn btn-success btn-outline-dark text-white">
            </form>
        </div>
        <div>
            <h4>Existing Categories</h4>
            <table class="table">
                    @foreach(Category c in ViewBag.AllCategories)
                        {
                            <tr>
                                <td><a href="/categories/@c.CategoryID">@c.CategoryName</a></td>
                            </tr>
                        }
            </table>
        </div>

    </div>

</div>